* {
    font-family: JetBrainsMono, FontAwesome, sans-serif;
    font-size: 14px;
    color: #ffffff;
    background: #1a1a1a;
}

/* Base bar styling */
window#waybar {
    background: #1a1a1a; /* Solid dark gray, no transparency issues */
    color: #cccccc; /* Light gray text */
    font-family: "Fira Sans SemiBold";
    font-size: 13px;
    border: none;
    border-radius: 0;
}

/* Ensure bar is always visible */
window#waybar.empty {
    background: #1a1a1a;
}

/* Window title in center */
#window {
    padding: 0 10px;
    color: #cccccc;
}

/* Workspaces */
#workspaces {
    margin: 0 5px;
}

#workspaces button {
    padding: 0 8px;
    color: #666666; /* Dim for inactive */
}

#workspaces button.visible {
    color: #cccccc;
}

#workspaces button.focused {
    color: #ffffff; /* White for focused */
}

#workspaces button.urgent {
    background: #a83232; /* Red for urgent */
    color: #ffffff;
}

#workspaces button:hover {
    color: #d1be8b; /* Gold hover */
}

/* All right-side modules */
#battery, #network, #cpu, #memory, #clock {
    margin: 0 5px;
    padding: 0 5px;
    color: #cccccc;
}

/* Clock-specific styling */
#clock {
    font-weight: bold;
}

/* Battery states */
#battery.warning {
    color: #ffcc00;
}

#battery.critical {
    color: #ff3333;
}

#battery.charging {
    color: #00cc00;
}

/* Network disconnected */
#network.disconnected {
    color: #ff3333;
}
